  "version": "2.0.0",
  "tasks": [
    {
      "label": "‚¨ÜÔ∏è UP (TCM)",
      "detail": "Build if needed then run a local docker environment",
      "type": "shell",
      "command": "GIT_COMMIT=$(git rev-parse HEAD) docker-compose up",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "‚¨áÔ∏è DOWN (TCM)",
      "detail": "Drop any stopped containers",
      "type": "shell",
      "command": "docker-compose down",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "üîÑ Restart (TCM)",
      "detail": "Restart just the app container",
      "type": "shell",
      "command": "docker-compose stop app && GIT_COMMIT=$(git rev-parse HEAD) docker-compose start app",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "üõë STOP (TCM)",
      "detail": "Stop all running containers",
      "type": "shell",
      "command": "docker-compose stop",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "üßπ CLEAN (TCM)",
      "detail": "Will drop the containers, then remove the related images and volumes",
      "type": "shell",
      "command": "docker-compose down --rmi local -v",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "üèóÔ∏è REBUILD (TCM)",
      "detail": "Drop and remove everything, then rebuild with no cache",
      "type": "shell",
      "command": "docker-compose down --rmi local -v && GIT_COMMIT=$(git rev-parse HEAD) docker-compose build --no-cache",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "üîé LINT (TCM)",
      "detail": "Run lint checks against the code",
      "type": "shell",
      "command": "docker-compose exec app bundle exec rubocop",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "‚úÖ TEST (TCM)",
      "detail": "Run unit tests in docker",
      "type": "shell",
      "command": "docker-compose exec app /bin/sh -c 'bundle exec rails test && bundle exec rspec'",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "‚úÖ RSPEC (TCM)",
      "detail": "Run just Rspec tests in docker",
      "type": "shell",
      "command": "docker-compose exec app bundle exec rspec",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "‚úÖ MINITEST (TCM)",
      "detail": "Run just Minitest tests in docker",
      "type": "shell",
      "command": "docker-compose exec app bundle exec rails test",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "üóÑÔ∏è DB (TCM)",
      "detail": "Will setup (or reset) both the main and test db's",
      "type": "shell",
      "command": "docker-compose exec app /bin/sh -c 'bundle exec rake db:reset && bundle exec rake db:seed'",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "üíª OPEN (TCM)",
      "detail": "Will open /bin/sh in the running 'app' container",
      "type": "shell",
      "command": "docker-compose exec app /bin/sh",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      }
    }
  ]
}
