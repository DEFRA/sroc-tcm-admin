<% content_for :dp_content do %>
  <button type='button' class='btn btn-primary accept-and-download-btn'>
    Accept and Download
  </button>
  <button type='button' class='btn btn-secondary' data-dismiss='modal'>
    Cancel
  </button>
<% end %>
<div id="data-protection-dialog" class='modal fade' role='dialog'
     data-backdrop='static' aria-hidden='true'>
  <div class='modal-dialog modal-lg' role='document'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title'>Export Transaction Data</h5>
        <button type='button' class='close' data-dismiss='modal'
                aria-label='Close'>
          <span aria-hidden='true'>&times;</span>
        </button>
      </div>
      <div class='modal-body'>
        <%= render partial: 'shared/data_protection_message' %>
      </div>
    </div>
  </div>
</div>
