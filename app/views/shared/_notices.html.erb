<div class="row">
  <div class="col">
    <% flash.each do |key, value| %>
      <div class="alert <%= flash_class(key.to_sym) %> alert-dismissable fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= value.html_safe %>
      </div>
    <% end %>
  </div>
</div>
