<dl class="row">
  <dt class="col-5 col-lg-6">Export file generated on:</dt>
  <dd class="col-7 col-lg-6"><%= formatted_date(export_data_file.last_exported_at, true) unless export_data_file.last_export_at.nil? %></dd>
</dl>
<% if export_data_file.exported_filename %>
  <div class="mt-4">
    <%= link_to "Agree and Download Transaction Data",
      download_regime_data_export_index_path(@regime),
      class: "btn btn-primary" %>
  </div>
<% end %>
<% if SystemConfig.config.can_generate_export? %>
  <div class="mt-4">
    <%= link_to "TEST: Regenerate Export File",
      generate_regime_data_export_index_path(@regime),
      class: "btn btn-warning" %>
  </div>
<% end %>
