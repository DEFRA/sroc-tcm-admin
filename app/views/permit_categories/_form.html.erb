<%= form_with(model: [@regime, permit_category], local: true) do |form| %>
  <% if permit_category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(permit_category.errors.count, "error") %> prohibited this permit category from being saved:</h2>

      <ul>
      <% permit_category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-lg-6">
    <div class="form-group">
      <%= form.label :code %>
      <%= form.text_field :code, id: :permit_category_code, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_field :description, id: :permit_category_description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :status %>
      <%= form.text_field :status, id: :permit_category_status, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :display_order %>
      <%= form.number_field :display_order, id: :permit_category_display_order, class: "form-control" %>
    </div>

    <div class="actions">
      <%= form.submit class: "btn btn-primary" %>
      <%= link_to 'Back', regime_permit_categories_path(@regime),
        class: "btn btn-secondary", role: "button" %>
    </div>
  </div>
<% end %>
