<div class="row search-bar">
  <div class="col mb-2">
    <%= form_with controller: controller_name, action: action_name, method: "get",
      class: 'form-inline', id: "search-bar", local: true do %>
      <div class="form-group mr-2">
        <%= label_tag(:fy, 'FY', class: 'mr-2') %>
        <%= select_tag(:fy, permit_financial_year_options(view_model.financial_years,
                                                          view_model.financial_year),
                       class: 'form-control') %>
      </div>
      <div class="input-group col-12 col-lg-3 col-md-3 col-sm-4 mr-2">
        <%= label_tag(:search, 'Search', class: 'sr-only') %>
        <%= search_field_tag(:search, view_model.search,
                             class: 'form-control',
                             placeholder: "Search Code or Description") %>
        <span class="input-group-btn">
          <%= submit_tag "Search", class: 'btn btn-outline-primary' %>
        </span>
      </div>
      <button class="btn btn-primary"
              type="button"
              id="new-category"
              data-path="<%= new_regime_permit_category_path(@regime) %>">
        New Permit Category
      </button>
      <%= hidden_field_tag :financial_year, view_model.financial_year %>
      <%= hidden_field_tag :page, view_model.page %>
      <%= hidden_field_tag :sort, view_model.sort %>
      <%= hidden_field_tag :sort_direction, view_model.sort_direction %>
    <% end %>
  </div>
</div>
