<table class="table table-responsive">
  <thead>
    <tr>
      <th><span class='sr-only'>Details</span></th>
      <th><%= sortable :customer_reference, view_model %></th>
      <th><%= sortable :permit_reference, view_model %></th>
      <th><%= sortable :sroc_category, view_model %></th>
      <th><%= sortable :temporary_cessation, view_model %></th>
      <th><%= sortable :compliance_band, view_model %></th>
      <th><%= sortable :period, view_model %></th>
      <th class="text-right"><%= sortable :amount, view_model %></th>
      <th><%= sortable :original_filename, view_model %></th>
      <th><%= sortable :generated_filename, view_model %></th>
      <th><%= sortable :generated_file_date, view_model %></th>
      <th><%= sortable :tcm_transaction_reference, view_model %></th>
    </tr>
  </thead>
  <tbody>
    <% view_model.present_paged_transactions.each do |transaction| %>
      <%= render partial: 'wml_transaction', locals: { transaction: transaction,
      data_path: regime_transaction_path(view_model.regime, transaction) } %>
    <% end %>
  </tbody>
</table>
