<div class="row search-bar">
  <div class="col mb-2">
    <%= form_with controller: controller_name, action: action_name, method: "get",
      class: 'form-inline', id: "search-bar", local: true do %>
      <div class="form-group mr-4">
        <%= label_tag(:mode, 'View', class: 'mr-2') %>
        <%= select_tag(:mode, view_options(@regime), class: 'form-control') %>
      </div>
      <div class="form-group mr-4">
        <%= label_tag(:region, 'Region', class: 'mr-2') %>
        <%= select_tag(:region, region_options(@regime, false),
                       class: 'form-control') %>
      </div>
      <div class="form-group mr-2">
        <%= label_tag(:fy, 'FY', class: 'mr-2') %>
        <%= select_tag(:fy, financial_year_options(@financial_years),
                       class: 'form-control') %>
      </div>
      <div class="input-group col-12 col-lg-3 col-md-3 col-sm-4 mr-2">
        <%= label_tag(:search, 'Search', class: 'sr-only') %>
        <%= search_field_tag(:search, param_or_cookie(:search),
                             class: 'form-control',
                             placeholder: search_placeholder(@regime)) %>
        <span class="input-group-btn">
          <%= submit_tag "Search", class: 'btn btn-outline-primary' %>
        </span>
      </div>
      <button class="btn btn-primary generate-transaction-file-btn">Generate Transaction File</button>
      <% if current_user.admin? %>
        <button class="btn btn-success ml-4 approve-all-btn">Approve All</button>
      <% end %>
      <%= hidden_field_tag :page, 1 %>
      <%= hidden_field_tag :sort, params[:sort] %>
      <%= hidden_field_tag :sort_direction, params[:sort_direction] %>
    <% end %>
  </div>
</div>
