<div class="row">
  <div class="col">
    <h1>Transaction detail</h1>
  </div>
</div>
<% transaction = present_transaction(@transaction) %>
<%= render partial: "detail_summary", locals: { transaction: transaction } %>
<hr />
<% unless transaction.retrospective? %>
  <div class="row">
    <div class="col">
      <h2>Suggested category</h2>
    </div>
  </div>
  <% if transaction.suggested_category %>
    <%= render partial: "suggested_category", locals: { transaction: transaction } %>
  <% else %>
    <div class="row">
      <div class="col">
        <p>No category suggestion available for this transaction.</p>
      </div>
    </div>
  <% end %>
  <hr />
<% end %>
<% if @related_transactions.count.positive? %>
  <%= render partial: "related_transactions",
    locals: { transactions: @related_transactions } %>
<% end %>
<div class="row">
  <div class="col">
    <%= link_to 'Back to Transactions to be billed',
      regime_transactions_path(@regime), data: { turbolinks: false } %>
  </div>
</div>
