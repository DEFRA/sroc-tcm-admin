<div class="row">
  <div class="col">
    <h3>Matched transaction</h3>
  </div>
</div>
<div class="row">
  <div class="col">
    <table class="table table-sm table-responsive">
      <thead>
        <tr>
          <td></td>
          <% if @regime.waste_or_installations? %>
            <th><%= th :customer_reference %></th>
            <th><%= th :permit_reference %></th>
            <th><%= th :sroc_category %></th>
            <th><%= th :compliance_band %></th>
          <% else %>
            <th><%= th :customer_reference %></th>
            <th><%= th :consent_reference %></th>
            <th>
              <span aria-hidden="true">Ver</span>
              <span class="sr-only">Version</span>
            </th>
            <th>
              <span aria-hidden="true">Dis</span>
              <span class="sr-only">Discharge</span>
            </th>
            <th><%= th :sroc_category %></th>
            <th><%= th :variation %></th>
          <% end %>
          <th>
            <span aria-hidden="true">TC</span>
            <span class="sr-only">Temporary Cessation</span>
          </th>
          <th>Period</th>
          <th>File (TCM)</th>
          <% unless @regime.water_quality? %>
            <th>File Date (TCM)</th>
          <% end %>
          <th class="text-right">Amount (Â£)</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <%= link_to regime_transaction_path(@regime, transaction),
              class: 'btn btn-sm', role: 'button' do %>
              <span class='sr-only'>Details for transaction for period <%= transaction.period %></span>
              <span class='oi oi-magnifying-glass'></span>
            <% end %>
          </td>
          <td><%= transaction.customer_reference %></td>
          <td><%= transaction.permit_reference %></td>
          <% if @regime.waste_or_installations? %>
            <td><%= transaction.category %></td>
            <td><%= transaction.compliance_band %></td>
          <% else %>
            <td><%= transaction.version %></td>
            <td><%= transaction.discharge_reference %></td>
            <td><%= transaction.category %></td>
            <td><%= transaction.variation_percentage %></td>
          <% end %>
          <td><%= transaction.temporary_cessation_flag %></td>
          <td><%= transaction.period %></td>
          <td><%= transaction.generated_filename %></td>
          <% unless @regime.water_quality? %>
            <td><%= transaction.generated_file_date %></td>
          <% end %>
          <td class="text-right"><%= transaction.amount %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
