<li class="page-item">
  <% if current_page.first? %>
    <span class="page-link disabled">
      <span aria-hidden="true">&lt;</span>
      <span class="sr-only"><%= raw(t 'views.pagination.previous') %></span>
    </span>
  <% else %>
    <%= link_to url, rel: 'prev', remote: remote, class: 'page-link', data: { page: current_page.number - 1 } do %>
      <span aria-hidden="true">&lt;</span>
      <span class="sr-only"><%= raw(t 'views.pagination.previous') %></span>
    <% end %>
  <% end %>
</li>
