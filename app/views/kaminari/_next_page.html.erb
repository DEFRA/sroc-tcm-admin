<li class="page-item">
  <% if current_page.last? %>
    <span class="page-link disabled">
      <span aria-hidden="true">&gt;</span>
      <span class="sr-only"><%= raw(t 'views.pagination.next') %></span>
    </span>
  <% else %>
    <%= link_to url, rel: 'next', remote: remote, class: 'page-link', data: { page: current_page.number + 1 } do %>
      <span aria-hidden="true">&gt;</span>
      <span class="sr-only"><%= raw(t 'views.pagination.next') %></span>
    <% end %>
  <% end %>
</li>
